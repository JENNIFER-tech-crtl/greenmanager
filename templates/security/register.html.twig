{% extends 'base.html.twig' %}

{% block title %}Inscription - GreenManager{% endblock %}

{% block body %}
<div class="container vh-100 d-flex justify-content-center align-items-center" style="background-color: #f5f5f5;">
    <div class="card shadow-lg p-4" style="width: 450px; border-radius: 15px;">
        <div class="text-center mb-4">
            <h2 style="color: #28a745;">GreenManager</h2>
            <p class="text-muted">Créez votre compte pour accéder à votre tableau de bord</p>
        </div>

        {{ form_start(registerForm) }}
            <div class="mb-3">
                {{ form_label(registerForm.name, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registerForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom complet'}}) }}
                {{ form_errors(registerForm.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(registerForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registerForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                {{ form_errors(registerForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(registerForm.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registerForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
                {{ form_errors(registerForm.password) }}
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">S’inscrire</button>
            </div>
        {{ form_end(registerForm) }}

        <div class="mt-3 text-center">
            <span>Déjà un compte ? <a href="{{ path('app_login') }}" class="text-success">Connexion</a></span>
        </div>
    </div>
</div>
{% endblock %}
