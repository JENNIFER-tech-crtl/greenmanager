{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Mon profil</h4>
                </div>
                <div class="card-body text-center">

                    {% if app.user.avatar %}
                        <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" class="rounded-circle mb-3" width="120" height="120" alt="Avatar">
                    {% else %}
                        <img src="{{ asset('images/default-avatar.png') }}" class="rounded-circle mb-3" width="120" height="120" alt="Avatar par défaut">
                    {% endif %}

                    <h5>{{ app.user.firstname }} {{ app.user.lastname }}</h5>
                    <p class="text-muted">{{ app.user.email }}</p>

                    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">✏️ Modifier</a>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
