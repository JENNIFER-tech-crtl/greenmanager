{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body { background: #f5f7fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .dashboard-header { background: linear-gradient(135deg,#28a745,#218838); color: white; padding: 30px; border-radius: 12px; margin-bottom: 30px; text-align:center; box-shadow: 0 6px 25px rgba(0,0,0,0.1); }
    .quick-actions .btn { margin: 10px; padding: 12px 22px; font-weight: 600; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); transition: all 0.3s ease; }
    .quick-actions .btn:hover { transform: translateY(-4px); }
    .card-dashboard { border-radius: 12px; transition: all 0.3s ease; }
    .card-dashboard:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0,0,0,0.15); }
    .card-dashboard .card-body h5 { font-weight: 700; }
    .display-5 { font-size: 2rem; font-weight: bold; }
    canvas { max-width: 100%; height: 250px; }
</style>

<div class="container mt-5">

    <div class="dashboard-header">
        <h1>üìä Tableau de bord Admin</h1>
        <p class="lead">Bienvenue dans votre espace de gestion</p>
    </div>

    <!-- Quick Actions --><!-- Quick Actions -->
<div class="text-center quick-actions mb-5">
    <a href="{{ path('app_user_new') }}" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Ajouter un Employ√©
    </a>

    <a href="{{ path('app_task_new') }}" class="btn btn-warning text-white">
        <i class="bi bi-list-task"></i> Ajouter une T√¢che
    </a>

    <!-- Facture pour un employ√© -->
    <a href="{{ path('app_invoice_new') }}" class="btn btn-info text-white">
        <i class="bi bi-receipt"></i> Facture Employ√©
    </a>

    <!-- Facture pour un client -->
    <a href="{{ path('app_invoice_client_new') }}" class="btn btn-primary text-white">
        <i class="bi bi-receipt"></i> Facture Client
    </a>
</div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5 text-center">
        {% set totalUsers = totalUsers|default(0) %}
        {% set tasksTodo = tasksTodo|default(0) %}
        {% set tasksDoing = tasksDoing|default(0) %}
        {% set tasksDone = tasksDone|default(0) %}
        {% set invoicesPaid = invoicesPaid|default(0) %}
        {% set invoicesUnpaid = invoicesUnpaid|default(0) %}

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-people-fill text-success"></i> Employ√©s</h5>
                    <p class="display-5">{{ totalUsers }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-card-checklist text-warning"></i> T√¢ches √† faire</h5>
                    <p class="display-5">{{ tasksTodo }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-hourglass-split text-info"></i> T√¢ches en cours</h5>
                    <p class="display-5">{{ tasksDoing }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-check2-circle text-primary"></i> T√¢ches termin√©es</h5>
                    <p class="display-5">{{ tasksDone }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-cash-stack text-success"></i> Factures pay√©es</h5>
                    <p class="display-5">{{ invoicesPaid }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5><i class="bi bi-exclamation-triangle text-danger"></i> Factures impay√©es</h5>
                    <p class="display-5">{{ invoicesUnpaid }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5 class="text-center mb-4"><i class="bi bi-bar-chart-fill"></i> R√©partition des T√¢ches</h5>
                    <canvas id="tasksChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-dashboard shadow-sm">
                <div class="card-body">
                    <h5 class="text-center mb-4"><i class="bi bi-pie-chart-fill"></i> √âtat des Factures</h5>
                    <canvas id="invoicesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const tasksData = [{{ tasksTodo }}, {{ tasksDoing }}, {{ tasksDone }}];
    const invoicesData = [{{ invoicesPaid }}, {{ invoicesUnpaid }}];

    new Chart(document.getElementById('tasksChart'), {
        type: 'bar',
        data: {
            labels: ['√Ä faire','En cours','Termin√©es'],
            datasets: [{
                label: 'T√¢ches',
                data: tasksData,
                backgroundColor: ['#ffc107','#17a2b8','#28a745'],
                borderRadius: 10,
            }]
        },
        options: { responsive: true, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true }, x: { grid: { display: false } } } }
    });

    new Chart(document.getElementById('invoicesChart'), {
        type: 'doughnut',
        data: {
            labels: ['Pay√©es','Non pay√©es'],
            datasets: [{ label:'Factures', data: invoicesData, backgroundColor:['#28a745','#dc3545'], borderWidth:2 }]
        },
        options: { responsive:true, plugins:{ legend:{ position:'bottom' } } }
    });
</script>
{% endblock %}
